#!/usr/bin/env node
'use strict'

const express = require('express')
const app = express()

app.get('/', (req, res) => {
  res.send('OK')
})

app.get('/healthcheck', (req, res) => {
  res.send('OK')
})

const port = process.env.PORT || 3000
app.listen(port, () => {
  console.log(`Listen: http://localhost:${port}`)
})

